{
  "testEnvironment": "node",
  "preset": "ts-jest",
  "setupFilesAfterEnv": ["<rootDir>/tests/setupTest.ts"],
  "testMatch": ["**/tests/**/*.test.ts"],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/app.ts",
    "!**/node_modules/**",
    "!**/tests/**"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  }
}